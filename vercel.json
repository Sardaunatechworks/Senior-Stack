{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "nodeVersion": "20.x",
  "env": {
    "NODE_ENV": "production"
  },
  "envPrefix": [
    "VITE_",
    "DATABASE_",
    "SESSION_",
    "SMTP_",
    "ADMIN_",
    "VERCEL"
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}

